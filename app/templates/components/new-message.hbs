{{#if addNewMessage}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action "saveMessage1"}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action "messageFormShow"}}>Ask A Question</button>
{{/if}}
